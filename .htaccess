# MASTER TEMPLATE: IMPULSE SEO & REDIRECTS
RewriteEngine On

# 1. Force HTTPS
RewriteCond % {HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# 2. Remove .html extension
# Check if the request is for a real file
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
# If the file exists with .html, serve it
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^([^\.]+)$ $1.html [NC,L]

# 3. Custom 404 Page (If you have a 404.html)
ErrorDocument 404 /404.html

# 4. Cache Control (Speed Optimization)
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresDefault "access plus 1 month"
    ExpiresByType text/html "access plus 1 day"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
</IfModule>